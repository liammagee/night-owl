{
  "name": "hegel-pedagogy-electron",
  "version": "1.0.0",
  "description": "Electron wrapper for Hegel Pedagogy AI presentation app",
  "main": "main.js",
  "scripts": {
    "dev": "tsx markdown-prezi-app.tsx",
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "lucide-react": "^0.523.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "electron": "^32.3.3",
    "electron-builder": "^25.1.8",
    "tsx": "^4.20.3"
  },
  "build": {
    "appId": "com.hegel.pedagogy.electron",
    "productName": "Hegel Pedagogy AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "lectures/**/*",
      "texts/**/*",
      "sample-presentation.md",
      "lecture_summary.md"
    ],
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
